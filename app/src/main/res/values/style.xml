<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme, inheriting from Material Components -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Reference to your custom Material Calendar theme -->
        <item name="materialCalendarTheme">@style/CustomMaterialCalendarTheme</item>
        <!-- Customize your theme further if needed -->
    </style>

    <style name="CustomMaterialDatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- Customize colors as per your requirement -->
        <item name="materialCalendarTheme">@style/CustomMaterialCalendarTheme</item>
    </style>

    <!-- Customize the calendar appearance -->
    <style name="CustomDecoratedBarcodeView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="zxing_framing_rect_width">240dp</item>
        <item name="zxing_framing_rect_height">240dp</item>
        <item name="zxing_viewfinder_laser_visibility">false</item>

    </style>

    <!-- Custom Theme for DatePicker -->
    <style name="CustomMaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- Customize colors as per your requirement -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

</resources>
