<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:fitsSystemWindows="true"
    tools:context=".RadniciActivity">

    <ImageView
        android:id="@+id/imageViewBackground"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="32dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pocetna"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="KORISNIČKI PODATCI"
        android:textColor="@color/colorWhite"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBackground"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/imeTextView"
        android:layout_width="159dp"
        android:layout_height="23dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="40dp"
        android:text="         Ime i prezime:"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />


    <EditText
        android:id="@+id/prikazUsername"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_edittext_background"
        android:enabled="false"
        android:gravity="center"
        android:inputType="text"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imeTextView" />

    <TextView
        android:id="@+id/prezimeTextView"
        android:layout_width="159dp"
        android:layout_height="23dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="56dp"
        android:text="          Email adresa:"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prikazUsername" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_edittext_background"
        android:enabled="false"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prezimeTextView" />

    <TextView
        android:id="@+id/prezimeTextView2"
        android:layout_width="159dp"
        android:layout_height="23dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="56dp"
        android:text="               Lozinka:"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_edittext_background"
        android:enabled="false"
        android:gravity="center"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prezimeTextView2" />

    <Button
        android:id="@+id/togglePasswordVisibility"
        android:layout_width="160dp"
        android:layout_height="29dp"
        android:layout_below="@id/editPassword"
        android:background="@drawable/rounded_edittext_background"
        android:text="PRIKAŽI/SAKRIJ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPassword"
        app:layout_constraintVertical_bias="0.096" />

</androidx.constraintlayout.widget.ConstraintLayout>
