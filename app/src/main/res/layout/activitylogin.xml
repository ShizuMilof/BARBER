<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="src_over">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewBackground"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pocetna" />

        </FrameLayout>


        <!-- Registration Section -->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="678dp"
            android:background="#000000">


            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="252dp"
                android:layout_height="71dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="257dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="288dp"
                android:background="@drawable/rounded_edittext_background"
                android:gravity="center"
                android:hint="Unesite e-mail"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorBlack" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="249dp"
                android:layout_height="62dp"
                android:layout_below="@+id/editTextEmail"
                android:layout_alignEnd="@+id/editTextEmail"
                android:layout_marginTop="68dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/rounded_edittext_background"
                android:gravity="center"
                android:hint="Unesite lozinku"
                android:inputType="textPassword"
                android:textColor="@color/colorBlack" />

            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="249dp"
                android:layout_height="78dp"
                android:layout_below="@id/editTextPassword"
                android:layout_alignEnd="@+id/editTextPassword"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/rounded_button"
                android:text="Prijavi se" />

            <Button
                android:id="@+id/btnOpenRegisterActivity"
                android:layout_width="198dp"
                android:layout_height="120dp"
                android:layout_below="@+id/buttonLogin"
                android:layout_alignStart="@+id/buttonLogin"

                android:layout_alignEnd="@+id/buttonLogin"
                android:layout_marginStart="3dp"
                android:layout_marginTop="41dp"
                android:layout_marginEnd="-2dp"
                android:background="@drawable/black_button_background"
                android:text="Nemate račun?"
                android:textColor="#FFFFFF"
                app:cornerRadius="9dp" />


        </RelativeLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
